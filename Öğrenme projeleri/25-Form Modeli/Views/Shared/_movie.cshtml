@model Movie

    <div class="card mb-3">
        <div class="row">
            <div class="col-md-3">
                <img src="/img/@Model.ImgUrl" alt="@Model.Title">
            </div>
            <div class="col-md-9">
                <div class="card-body">
                    <h5 class="card-title">@Model.Title</h5>
                    <p>
                        <a class="btn btn-primary" href="/movies/details/@Model.MovieId">details</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
