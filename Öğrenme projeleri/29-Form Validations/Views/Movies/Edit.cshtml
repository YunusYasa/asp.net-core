@model Movie
<h1>Edit Movie</h1>
<hr />

@if (Model != null)
{
    <form method="post" asp-controller="Movies" asp-action="Edit">
        <input type="hidden" name="MovieId" value="@Model.MovieId" />
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" value="@Model.Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control">@Model.Description"</textarea>
            <span asp-validation-for="Description" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="Director"></label>
            <input asp-for="Director" class="form-control" value="@Model.Director" />
            <span asp-validation-for="Director" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="ImgUrl"></label>
            <input asp-for="ImgUrl" class="form-control" value="@Model.ImgUrl" />
            <span asp-validation-for="ImgUrl" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="GenreId"></label>
            <select asp-for="GenreId" asp-items="@ViewBag.Genres" class="form-control">
                <option selected disabled>Seçiniz</option>
            </select>
            <span asp-validation-for="GenreId" class="text-danger"></span>

        </div>
        <button class="btn btn-primary">Submit</button>


    </form>
}
else
{
    <p>Model is null</p>
}
